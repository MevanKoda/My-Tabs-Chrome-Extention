{
    "manifest_version": 3,
    "name": "My Chrome Extension",
    "version": "1.0",
    "description": "A simple Chrome extension to manage tabs and content.",
    "permissions": [
      "activeTab",
      "tabs",
      "storage"
    ],
    "background": {
      "service_worker": "main.js"
    },
    "action": {
      "default_popup": "index.html"
      
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["main.js"],
        "run_at": "document_idle"
      }
    ]
  }
  